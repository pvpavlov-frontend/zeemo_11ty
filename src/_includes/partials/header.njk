<div class="header">
    <header>
        <div class="header__container container">
            <div class="header__logo logo" role="banner">
            <a href="/">
                <img
                src="./../assets/img/logo.png"
                alt="Zeemo"
                width="181"
                height="42"
                />
            </a>
            </div>
            <div class="header__main-menu-burger burger"></div>
            <div class="header__main-menu-container" id="main-menu-container">
            <nav aria-label="softevol main menu">
                <div class="main-menu__button-container"></div>
                <ul class="main-menu" role="menubar" aria-label="softevol main menu">
                {% for link, href in menu %}
                    <li class="main-menu__item" role="none">
                        <a class="main-menu__link main-menu__link--current" href="{{ href }}" role="menuitem">{{ link | i18n }} </a>
                    </li>
                {% endfor %}
                </ul>
            </nav>
            </div>
        </div>
    </header>
</div>